    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ - Сборка и отладка",
            "type": "cppdbg",
            "request": "launch",
            // "program": "${workspaceFolder}/build/bin/tests",
            // "args": [ "Encode-decode-vp8" ],
            // "program": "${workspaceFolder}/build/bin/agent",
            // "args": [],
            // "program": "${workspaceFolder}/build/bin/stream-sender",
            // "args": [],
            "program": "${workspaceFolder}/build/bin/receiver",
            "args": ["--local-udp-port", "35011"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}