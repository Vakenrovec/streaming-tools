    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ - Сборка и отладка",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/streamer.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}