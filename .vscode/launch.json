    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ - Сборка и отладка",
            "type": "cppdbg",
            "request": "launch",
            // "program": "${workspaceFolder}/build/bin/tests",
            // "args": [ "video", "-c", "WebCamera-convert-encode-fragment-depay-defragment-decode-display" ],
            // "args": [ "network", "-c", "Network-communication" ],
            // "program": "${workspaceFolder}/build/bin/agent",
            // "args": [],
            "program": "${workspaceFolder}/build/bin/client",
            "args": [ "--receiver", "--stream-id", "777" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}